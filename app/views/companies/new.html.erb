<div style="margin-top: 50px; margin-bottom: 100px">
  <div class="modal-dialog">
    <div class="modal-content modal-popup-2">
      <div class="popup-form">
        <%= form_for(@company) do |f| %>
          <%= render "shared/error_messages", object: f.object %>
          <div class="login_icon"><i class="icon_lock-open_alt"></i></div>
          <h3>会社またはフリランス<br>サインアップ</h3>
          <%= f.text_field :name, class: "form-control form-white", placeholder: "名前" %>
          <%= f.email_field :email, class: "form-control form-white", placeholder: "メールアドレス" %>
          <%= f.password_field :password, class: "form-control form-white", placeholder: "パスワード" %>
          <%= f.password_field :password_confirmation, class: "form-control form-white", placeholder: "もう一度パスワードを入力" %>
          <%= f.number_field :phone, class: "form-control form-white", style: "margin-top: -2px", placeholder: "電話番号" %>
          <%= f.text_field :address, class: "form-control form-white", placeholder: "アドレス" %>
          <div id="pass-info" class="clearfix"></div>
          <%= f.submit "申し込む", class: "btn btn-submit", style: "margin-top: -5px" %>
        <% end %>
        <h5 style="margin-top: 30px"><%= link_to "学生のサインアップページはこちら", new_student_path %></h5>
      </div>
    </div>
  </div>
</div>