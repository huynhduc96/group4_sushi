<section class="parallax-window" id="short" data-parallax="scroll" data-image-src="img/sub_header_cart.jpg" data-natural-width="1400" data-natural-height="350">
  <div id="subheader">
    <div id="sub_content">
      <h1><%= @company.name %></h1>
    </div><!-- End sub_content -->
  </div><!-- End subheader -->
</section><!-- End section -->

<div class="container margin_60_35">
  <div class="col-md-10 col-md-offset-1">
    <div class="box_style_2 nomargin">
      <div class="row">
        <div class="col-md-12">
          <div class="col-md-6">
            <h3>仕事の管理</h3>
          </div>
          <div class="col-md-3" style="float: right">
            <%= link_to "新規作成", new_work_path, class: "btn_full" ,style: "float: right" %>
          </div>
        </div>
        <div class="col-md-12">
          <!--  Tabs -->
          <ul class="nav nav-tabs">
            <li class="active"><a href="#home" data-toggle="tab">実施中の仕事−公開</a></li>
            <li><a href="#profile" data-toggle="tab">実施中の仕事−不公開</a></li>
            <li><a href="#messages" data-toggle="tab">終わった仕事</a></li>
          </ul>

          <div class="tab-content">
            <div class="tab-pane" id="home">
              <%= render @work_inprocesses_open %>
            </div>
            <div class="tab-pane" id="profile">
              <%= render @work_inprocesses_close %>
            </div>
            <div class="tab-pane" id="messages">
              <%= render @work_done %>
            </div>
          </div>

        </div><!-- End col-md-12-->
      </div><!-- End row-->
    </div><!-- End row-->
  </div><!-- End row-->
</div><!-- End row-->
