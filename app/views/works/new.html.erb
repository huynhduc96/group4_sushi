<!-- Content ================================================== -->
<div class="container margin_60_35">
  <div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-8">
      <div class="box_style_2" id="order_process">
        <h2 class="inner">仕事の作成</h2>
        <%= form_for(@work, class: "popup-form") do |f| %>
          <%= render "shared/error_messages", object: f.object %>
          <div class="form-group">
            <label>タイトル</label>
            <%#= f.hidden_field :company_id, :company_id => 1 %>
            <%= f.text_field :title, class: "form-control", placeholder: "タイトル" %>
          </div>
          <div class="form-group">
            <label>締め切り</label>
            <%= f.datetime_select(:dateline, :default => { :hour => 23, :minute => 59 }) %>
            <%#= f.text_field :dateline, class: "form-control", placeholder: "締め切り" %>
          </div>
          <div class="form-group">
            <label>給料</label>
            <%= f.number_field :salary, class: "form-control", placeholder: "給料" %>
          </div>
          <div class="form-group">
            <label>仕事のタグ</label>
            <%= f.text_field :tag, class: "form-control", placeholder: "給料" %>
          </div>

          <div class="form-group">
            <label>勤務地</label>
            <%= f.text_field :work_location, class: "form-control", placeholder: "勤務地" %>
          </div>
          <hr>
          <div class="row">
            <div class="col-md-12">
              <label>仕事の詳細内容</label>
              <%= f.text_field :content, class: "form-control", style: "height:150px", placeholder: "例：RubyonRails, Javaなど…" %>
            </div>
          </div>

          <div class="form-group">
            <label>公開設定 </label>
            <%= f.check_box :status %>
          </div>
          <%= f.submit "保存する", class: "btn_full", style: "margin-top: 20px" %>
        <% end %>
      </div><!-- End box_style_1 -->
    </div><!-- End col-md-6 -->

  </div><!-- End row -->
</div><!-- End container -->