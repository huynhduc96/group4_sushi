<!-- SubHeader =============================================== -->
<section class="parallax-window" id="short" data-parallax="scroll" data-image-src="img/sub_header_short.jpg" data-natural-width="1400" data-natural-height="350">
  <div id="subheader">
    <div id="sub_content">
      <h1> 仕事の一覧</h1>
      <div>仕事を応募したい方、こちら！</div>
    </div><!-- End sub_content -->
  </div><!-- End subheader -->
</section><!-- End section -->
<!-- End SubHeader ============================================ -->

<!-- Content ================================================== -->
<div class="container margin_60_35">
  <%= search_form_for @q do |f| %>
    <div class="row">
      <div class="col-md-3">
        <div id="filters_col">
          <a data-toggle="collapse" href="#collapseFilters" aria-expanded="false" aria-controls="collapseFilters" id="filters_col_bt">検索詳細
            <i class="icon-plus-1 pull-right"></i></a>
          <div class="collapse" id="collapseFilters">
            <div class="filter_type">
              <br>
              <h5>締め切り</h5>
              <%= f.date_field :dateline_lteq, class: "col-md-12", style: "height: 20px" %>
            </div>
            <hr>
            <div class="filter_type">
              <h5>最低賃金</h5>
              <%= f.number_field :salary_gteq, class: "col-md-12", style: "height: 20px" %>
            </div>
            <hr>            <hr>
            <div class="filter_type">
              <h5>内容</h5>
              <%= f.text_field :content_cont, class: "col-md-12", style: "height: 50px" %>
            </div>
            <hr>            <hr>
          </div><!--End collapse -->
        </div><!--End filters col-->
      </div><!--End col-md -->

      <div class="col-md-9">
        <div id="tools">

          <div class="row">
            <div class="col-md-6 col-sm-12 hidden-xs" style="height: 40px">
              <%= f.text_field :title_cont, class: "col-md-12", style: "height: 40px", placeholder: "仕事のタイトル" %>
            </div>
            <div class="col-md-6 col-sm-12 hidden-xs" style="height: 40px">
              <%= f.text_field :company_name_cont, class: "col-md-10", style: "height: 40px", placeholder: "や会社またはフリランスの名前" %>
              <%= f.submit "検索", class: "bt_filters col-md-2", style: "height: 40px" %>
            </div>


          </div>
        </div><!--End tools -->

        <%= render @works %>
        <%= paginate @works, theme: "twitter-bootstrap-3" %>
      </div><!-- End col-md-9-->
    </div><!-- End row -->
  <% end %>
</div><!-- End container -->
<!-- End Content =============================================== -->